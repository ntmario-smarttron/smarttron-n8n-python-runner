{
  "task-runners": [
    {
      "runner-type": "javascript",
      "workdir": "/opt/runners/task-runner-javascript",
      "command": "node",
      "args": [
        "dist/index.js"
      ],
      "health-check-server-port": "5681",
      "env-overrides": {
        "NODE_FUNCTION_ALLOW_BUILTIN": "crypto,fs,path",
        "NODE_FUNCTION_ALLOW_EXTERNAL": "moment,uuid"
      }
    },
    {
      "runner-type": "python",
      "workdir": "/opt/runners/task-runner-python",
      "command": "python3",
      "args": [
        "runner.py"
      ],
      "health-check-server-port": "5682",
      "env-overrides": {
        "PYTHONPATH": "/opt/runners/task-runner-python",
        "N8N_RUNNERS_STDLIB_ALLOW": "json,math,datetime,re,os",
        "N8N_RUNNERS_EXTERNAL_ALLOW": "numpy,pandas,pillow,piexif,exifread"
      }
    }
  ]
}